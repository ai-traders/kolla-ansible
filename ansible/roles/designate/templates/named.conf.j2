include "/etc/rndc.key";
options {
        listen-on port {{ designate_bind_port }} { {{ hostvars[inventory_hostname]['api_interface_address'] }}; };
        directory       "/var/lib/named";
        allow-notify { {% for worker in groups['designate-worker'] %}{{ hostvars[worker]['api_interface_address'] }};{% endfor %} };
        allow-new-zones yes;
        dnssec-validation auto;
        auth-nxdomain no;
        request-ixfr no;
        recursion yes;
        minimal-responses yes;
        allow-query     { any; };

        forward only;
        forwarders {
        {% for forwarder in designate_bind_forwarders %}
          {{ forwarder }};
        {% endfor %}
	      };
};

controls {
        inet {{ hostvars[inventory_hostname]['api_interface_address'] }} port {{ designate_rndc_port }} allow { {% for host in groups['designate-worker'] %}{{ hostvars[host]['api_interface_address'] }}; {% endfor %} } keys { "rndc-key"; };
};
