{
    "command": "/usr/bin/ceph-osd -f --public-addr {{ hostvars[inventory_hostname]['storage_address'] }} --cluster-addr {{ hostvars[inventory_hostname]['cluster_address'] }}",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/ceph.conf",
            "dest": "/etc/ceph/ceph.conf",
            "owner": "ceph",
            "perm": "0600"
        },
        {
            "source": "{{ container_config_directory }}/ceph.client.admin.keyring",
            "dest": "/etc/ceph/ceph.client.admin.keyring",
            "owner": "ceph",
            "perm": "0600"
        }
    ]
}
