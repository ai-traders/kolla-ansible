#!/bin/bash

set +e

route del default
{% if inventory_hostname in groups["network"] %}
ip route add default via 10.0.0.1
{% else %}
route add default gw {{ default_gateway }}
{% endif %}

ip route add 10.1.0.0/16 via {{ old_gateway }}
ip route add 10.3.0.0/16 via {{ internal_gate_ip }}
ip route add 10.233.233.0/24 via {{ internal_gate_ip }}

exit 0
